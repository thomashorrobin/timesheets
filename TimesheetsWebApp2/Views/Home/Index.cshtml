<div class="jumbotron">
    <h1>Timesheets portal</h1>
    <p class="lead">This portal replaces the current Open Office based spreadsheets used for submitting weekly timesheets. You can also view existing data relating to timesheets</p>
    <p><a href="ColorShops" class="btn btn-primary btn-lg">View ColorShops &raquo;</a></p>
    <p><a href="Employees?ShopId=0&CurrentEmployeesOnly=True" class="btn btn-primary btn-lg">View Employees &raquo;</a></p>
</div>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Week Starting", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Mondays", null, htmlAttributes: new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.WeekStarting, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.Label("ColorShop", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Shops", null, htmlAttributes: new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.ShopId, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create/Edit Timesheet &raquo;" class="btn btn-primary btn-lg" />
            </div>
        </div>
    </div>
}

